@model ZeneApp.Models.Music

@{
    ViewData["Title"] = "Uj zene hozzaadasa";
}

<h2>Add New Music</h2>

<form asp-action="CreateMusic" method="post">
    <div class="form-group">
        <label asp-for="Title">Cim</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Performer">Eloado</label>
        <input asp-for="Performer" class="form-control" />
        <span asp-validation-for="Performer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="YearOfPublishing">Kiadas eve</label>
        <input asp-for="YearOfPublishing" class="form-control" />
        <span asp-validation-for="YearOfPublishing" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Length">Hossz</label>
        <input asp-for="Length" class="form-control" />
        <span asp-validation-for="Length" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Priority">Prioritas</label>
        <input asp-for="Priority" class="form-control" />
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Mentes</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
